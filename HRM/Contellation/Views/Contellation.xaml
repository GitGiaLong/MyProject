<Window x:Class="Contellation.Views.Contellation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contellation.Views"
        xmlns:i="clr-namespace:Core.WPF.Interactivities;assembly=Core.WPF"
        mc:Ignorable="d"
        Title="Contellation" Height="450" Width="800">
    <Grid>
        <Border Background="#282D33" BorderBrush="#3A4149" BorderThickness="5" CornerRadius="8,8,8,8">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseLeftButtonDown">
                    <i:InvokeCommandAction Command="{Binding}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </Border>

    </Grid>
</Window>
